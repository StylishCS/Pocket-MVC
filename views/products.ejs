<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Poppins:ital,wght@0,100;0,300;0,400;0,500;0,600;0,700;1,100&display=swap"
      rel="stylesheet"
    />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/allProducts.css" />
    <title>All products</title>
  </head>
  <body>
    <div class="all-products">
      <h2 class="products-title"><%= title %></h2>

      <div class="product-parent">
        <% products.forEach(product => {%>
            <div class="product">
              <div class="bar"></div>
              <div class="image-parent">
                <img src="<%= product.image %>" alt="product" />
              </div>
              <p class="title"><%= product.name %></p>
              <div class="stars-container">
                <% for(let i = 0; i < 5; i++) { %>
                  <i class="fa-solid fa-star" style="color: <%= i < product.rating ? '#ffd700' : '#ddd' %>"></i>
                <% } %>
              </div>
              <div class="price-container">
                <span>$<%= product.price %></span>
              </div>
            </div>
        <%})%>
      </div>
    </div>
  </body>
</html>
